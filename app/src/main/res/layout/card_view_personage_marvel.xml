<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/photo_personage"
            android:layout_width="96dp"
            android:layout_height="96dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/photo_personage"
            android:id="@+id/name_personage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Nome do Personagem]"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/photo_personage"
            android:layout_below="@+id/name_personage"
            android:id="@+id/description_personage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Descrição do mesmo]"
            android:textSize="12sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>